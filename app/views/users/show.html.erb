<div class='container px-5 px-sm-0'>
  <div class='row'>
    <div class='col-md-3'>
      <h2>User info</h2>
      <%= render 'info', user: @user %>
      <h2 class="mt-3">New book</h2>
      <%= render 'books/form', book: @book %>
    </div>
    <div class='col-md-8 offset-md-1'>
      <h2>Books</h2>
      <%= render 'books/index',books: @books %>
      <h2>投稿数の前日比・前週比</h2>
      <table class="table">
       <thead>
        <tr>
         <th scope="col">今日の投稿数</th>
         <th scope="col">前日の投稿数</th>
         <th scope="col">前日比</th>
        </tr>
       </thead>
       <tbody>
        <tr>
         <td><%= @booksToday.count %></td>
         <td><%= @books.count %></td>
         <td>%</td>
        </tr>
       </tbody>
      </table>
      <table class="table">
       <thead>
        <tr>
         <th scope="col">今週の投稿数</th>
         <th scope="col">前週の投稿数</th>
         <th scope="col">前週比</th>
        </tr>
       </thead>
       <tbody>
        <tr>
         <td><%= @booksThisweek.count %></td>
         <td><%= @booksLastweek.count %></td>
         <td>%</td>
        </tr>
       </tbody>
      </table>
    </div>
  </div>
</div>