<div class='container'>
  <div class='row'>
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
    <h2>Event mail</h2>
    <%= form_with url: group_send_mail_path(@group), method: :get, local:true do |f| %>
      <div class="form-group">
        <%= f.label :title %>
        <%= f.text_field :title, class: "form-control title" %>
      </div>
      <div class="form-group">
        <%= f.label :content %>
        <%= f.text_area :content, class: "form-control content" %>
      </div>
      <div class="form-group">
        <%= f.submit "送信", class: 'btn btn-secondary' %>
      </div>
    <% end %>
  </div>
</div>
