<div class="left-button">
</div>
<h4 class="rooms-title">気になる同士</h4>
<% @members.each do |e| %>
  <div class="user-name">
  <strong>
    <%= attachment_image_tag(e.user, :profile_image, :fill, 100, 100, fallback: "no_image.jpg") %>
      <a class="rooms-user-link" href="/users/<%= e.user.id %>">
        <%= e.user.name %>さん
      </a>
  </strong>
  </div>
<% end %>
<hr>
<div class="chats">
  <div class="chat">
    <% if @chats.present? %>
      <% @chats.each do |m| %>
        <div class="chat-box">
          <div class="chat-face">
            <%= attachment_image_tag(m.user, :profile_image, :fill, 100, 100, fallback: "no_image.jpg") %>
          </div>
          <div class="chat-hukidashi"> <strong><%= m.message %></strong> <br>
            <%= m.created_at.strftime("%Y-%m-%d %H:%M")%>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
  <div class="posts">
    <%= form_for @chat do |f| %>
      <%= f.text_field :message, placeholder: "メッセージを入力して下さい" , size: 70, class:"form-text-field" %>
        <%= f.hidden_field :room_id, value: @room.id %>
          <%= f.submit "送信",class: 'form-submit'%>
    <% end %>
  </div>
  </div>